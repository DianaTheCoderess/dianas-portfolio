---
import Header from "@/components/Header.astro"
import resumeData from "@/data/resume.json"
import Layout from "@/layouts/Layout.astro"
import Footer from "@/components/Footer.astro"
import type { ResumeSchema } from "@/types/resumeTypes"

const resume: ResumeSchema = resumeData

// Social media icons mapping
const socialIcons = {
  GitHub: `<svg class="w-4 h-4 sm:w-5 sm:h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>`,
  LinkedIn: `<svg class="w-4 h-4 sm:w-5 sm:h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`,
}
---
<Layout title={"About"}>
  <Header />
  
  <main class="min-h-screen pt-24 sm:pt-32 md:pt-40">
    <div class="px-4 sm:px-6">
      <div class="max-w-7xl mx-auto">
        <div class="cyber-card rounded-xl sm:rounded-2xl p-2 sm:p-4 relative overflow-hidden group">
          <!-- Animated border effect -->
          <div class="absolute inset-0 bg-linear-to-r from-neon-pink via-cyber-blue to-neon-pink opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          
          <div class="relative bg-deep-purple/95 backdrop-blur-md rounded-lg sm:rounded-xl p-4 sm:p-8 md:p-12">
            <div class="space-y-8">
              <!-- Section Title -->
              <div class="space-y-4">
                <span class="inline-block text-cyber-blue font-mono text-xs sm:text-sm tracking-wider px-2 py-1">&lt; about /&gt;</span>
                <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-cream">About Me</h1>
              </div>

              <!-- Bio Section -->
              <div class="space-y-6">
                <div class="max-w-none">
                  <p class="text-lg text-cream/90 leading-relaxed">
                    {resumeData.basics.summary}
                  </p>
                  
                  <!--<div class="mt-8 space-y-4">-->
                  <!--  <h2 class="text-2xl font-bold text-neon-pink">What I Do</h2>-->
                  <!--  <p class="text-cream/90">-->
                  <!--    As a {resumeData.basics.label}, I specialize in creating innovative digital solutions -->
                  <!--    that combine cutting-edge technology with intuitive user experiences. My approach -->
                  <!--    focuses on writing clean, maintainable code while ensuring optimal performance -->
                  <!--    and scalability.-->
                  <!--  </p>-->
                  <!--</div>-->

                  <!-- Contact Info -->
                  <div class="mt-8 space-y-4">
                    <h2 class="text-2xl font-bold text-neon-pink">Let's Connect</h2>
                    <div class="space-y-3">
                      <p class="text-cream/90">
                        I'm always interested in hearing about new projects and opportunities.
                      </p>
                      <div class="flex gap-4">
                          <!-- Social Links-->
                        {
                          resumeData.basics.profiles.length >
                          0 && (
                            <div class="flex gap-3 sm:gap-4">
                              {resume.basics?.profiles?.map(
                                (profile) => (
                                  <a
                                    href={profile.url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="p-2 sm:p-3 bg-deep-purple/50 rounded-lg sm:rounded-xl text-cream/80 border border-neon-pink/20 hover:border-cyber-blue/50 hover:text-cyber-blue transition-all duration-300 group"
                                    aria-label={`Visit ${profile.network} profile`}>
                                    <Fragment
                                      set:html={
                                        socialIcons[
                                          profile.network as keyof typeof socialIcons
                                          ]
                                      }
                                    />
                                  </a>
                                ),
                              )}
                            </div>
                          )
                        } 
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer/>
</Layout>