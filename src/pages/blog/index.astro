---
import { useStoryblokApi } from '@storyblok/astro'
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Header.astro'
import resumeData from '../../data/resume.json'

const storyblokApi = useStoryblokApi()

const { data } = await storyblokApi.get('cdn/stories', {
  version: import.meta.env.DEV ? 'draft' : 'published',
  content_type: 'blogPost',
  sort_by: 'content.date:desc'
})

const posts = data.stories
---

<Layout title={`Blog - ${resumeData.basics.name}`}>
  <Header />
  
  <main class="min-h-screen pt-24 sm:pt-32 md:pt-40">
    <div class="px-4 sm:px-6">
      <div class="max-w-7xl mx-auto">
        <div class="cyber-card rounded-xl sm:rounded-2xl p-2 sm:p-4 relative overflow-hidden group">
          <!-- Animated border effect -->
          <div class="absolute inset-0 bg-linear-to-r from-neon-pink via-cyber-blue to-neon-pink opacity-0 group-hover:opacity-100 transition-opacity duration-300 animate-border"></div>
          
          <div class="relative bg-deep-purple/95 backdrop-blur-md rounded-lg sm:rounded-xl p-4 sm:p-8 md:p-12">
            <div class="space-y-8">
              <!-- Section Title -->
              <div class="space-y-4">
                <span class="inline-block text-cyber-blue font-mono text-xs sm:text-sm tracking-wider px-2 py-1">&lt; blog /&gt;</span>
                <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-cream">Latest Posts</h1>
              </div>

              <!-- Blog Posts Grid -->
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {posts.map((post) => (
                  <article class="cyber-card p-1 rounded-lg group/card">
                    <div class="relative bg-deep-purple/95 rounded-lg overflow-hidden">
                      {post.content.image?.filename && (
                        <div class="aspect-video relative overflow-hidden">
                          <img
                            src={post.content.image.filename}
                            alt={post.content.title}
                            class="w-full h-full object-cover transform group-hover/card:scale-110 transition-transform duration-500"
                          />
                          <div class="absolute inset-0 bg-linear-to-t from-deep-purple/90 to-transparent"></div>
                        </div>
                      )}

                      <div class="p-4 space-y-3">
                        <h2 class="text-xl font-bold text-neon-pink">
                          <a href={`/blog/${post.full_slug}`} class="hover:text-cyber-blue transition-colors duration-300">
                            {post.content.title}
                          </a>
                        </h2>
                        
                        <div class="flex items-center gap-4 text-sm text-cream/60">
                          <time datetime={new Date(post.content.date).toISOString()}>
                            {new Date(post.content.date).toLocaleDateString('en-US', {
                              year: 'numeric',
                              month: 'long',
                              day: 'numeric'
                            })}
                          </time>
                          {post.content.author && <span>By {post.content.author}</span>}
                        </div>

                        <p class="text-cream/80 text-sm line-clamp-3">
                          {post.content.excerpt}
                        </p>
                        
                        {post.content.tags && (
                          <div class="flex flex-wrap gap-2 mt-3">
                            {post.content.tags.split(',').map((tag: string) => (
                              <span class="inline-block px-2 py-1 text-xs bg-deep-purple/50 rounded-full text-cyber-blue border border-cyber-blue/20">
                                {tag.trim()}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </div>
                  </article>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>