---
import Header from "@/components/layout/Header.astro"
import Layout from "@/layouts/Layout.astro"
import resumeData from "@/data/resume.json"
import type { ResumeSchema } from "@/types/resumeTypes"
import Footer from "@/components/layout/Footer.astro"

const resume: ResumeSchema = resumeData
---

<Layout title="Impressum">
    <div class="min-h-screen flex flex-col">
        <Header/>
        <main class="flex-1 pt-24 sm:pt-32 md:pt-40 px-4 sm:px-6">
            <div class="max-w-3xl mx-auto">
                <div class="cyber-card rounded-xl sm:rounded-2xl p-2 sm:p-4 relative overflow-hidden">
                    <div class="relative bg-deep-purple/95 backdrop-blur-md rounded-lg sm:rounded-xl p-4 sm:p-8">
                        <h1 class="text-2xl sm:text-3xl font-bold mb-6">Impressum</h1>

                        <div class="space-y-6 text-cream/90">
                            <section>
                                <h2 class="text-xl font-semibold mb-3">Angaben gemäß § 5 TMG</h2>
                                <p>{resume.basics?.name}</p>
                                <p>{resume.basics?.location?.address}</p>
                                <p>{resume.basics?.location?.postalCode} {resume.basics?.location?.city}</p>
                            </section>

                            <section>
                                <h2 class="text-xl font-semibold mb-3">Kontakt</h2>
                                <p>E-Mail: {resume.basics?.email}</p>
                            </section>

                            <section>
                                <h2 class="text-xl font-semibold mb-3">Verantwortlich für den Inhalt nach § 55 Abs. 2
                                    RStV</h2>
                                <p>{resume.basics?.name}</p>
                                <p>{resume.basics?.location?.address}</p>
                                <p>{resume.basics?.location?.postalCode} {resume.basics?.location?.city}</p>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <Footer/>
    </div>
</Layout>
