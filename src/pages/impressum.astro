---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
---

<Layout title="Impressum">
    <Header />
    <main class="min-h-screen pt-24 sm:pt-32 md:pt-40 px-4 sm:px-6">
        <div class="max-w-3xl mx-auto">
            <div class="cyber-card rounded-xl sm:rounded-2xl p-2 sm:p-4 relative overflow-hidden">
                <div class="relative bg-deep-purple/95 backdrop-blur-md rounded-lg sm:rounded-xl p-4 sm:p-8">
                    <h1 class="text-2xl sm:text-3xl font-bold mb-6">Impressum</h1>
                    
                    <div class="space-y-6 text-cream/90">
                        <section>
                            <h2 class="text-xl font-semibold mb-3">Angaben gemäß § 5 TMG</h2>
                            <p>Diana Mukaliyeva</p>
                            <p>Musterstraße 123</p>
                            <p>12345 Berlin</p>
                        </section>

                        <section>
                            <h2 class="text-xl font-semibold mb-3">Kontakt</h2>
                            <p>E-Mail: diana@mukaliyeva.com</p>
                        </section>

                        <section>
                            <h2 class="text-xl font-semibold mb-3">Verantwortlich für den Inhalt nach § 55 Abs. 2 RStV</h2>
                            <p>Diana Mukaliyeva</p>
                            <p>Musterstraße 123</p>
                            <p>12345 Berlin</p>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
