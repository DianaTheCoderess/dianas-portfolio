---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import LoadingScreen from "../components/LoadingScreen"
import ResumeDownload from "../components/ResumeDownload"
import { TechStack } from "../components/TechStack"
// import Terminal from "../components/Terminal.astro"
import { VisibilityWrapper } from "../components/VisibilityWrapper"
import { Link } from "../components/ui/Link"
import resumeData from "../data/resume.json"
import Layout from "../layouts/Layout.astro"
import type { ResumeSchema } from "../types/resumeTypes"

const resume: ResumeSchema = resumeData

const techStack = resume.skills?.flatMap((skill) => skill.keywords || []) || []

// Social media icons mapping
const socialIcons = {
  GitHub: `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>`,
  LinkedIn: `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`,
}
---

<Layout title={`${resume.basics?.name} - Portfolio`}>
    <LoadingScreen client:load />

    <VisibilityWrapper client:load>
        <Header />

        <main class="min-h-screen pt-24 sm:pt-32 md:pt-40">
            <section class="px-4 sm:px-6">
                <div class="max-w-7xl mx-auto">
                    <div
                        class="cyber-card rounded-xl sm:rounded-2xl p-2 sm:p-4 relative overflow-hidden group"
                    >
                        <div
                            class="relative bg-deep-purple/95 backdrop-blur-md rounded-lg sm:rounded-xl p-4 sm:p-8 md:p-12"
                        >
                            <div
                                class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center"
                            >
                                <!-- Left Column: Main Content -->
                                <div class="space-y-6 sm:space-y-8">
                                    <div class="space-y-4 sm:space-y-6">
                                        <div class="inline-block">
                                            <span
                                                class="text-cyber-blue font-mono text-xs sm:text-sm tracking-wider"
                                                >&lt; welcome /&gt;</span
                                            >
                                        </div>
                                        <h1
                                            class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-4 sm:mb-6"
                                        >
                                            Hello, I'm
                                            <span
                                                class="text-neon-pink block mt-2"
                                                >{
                                                    resume.basics?.name?.split(
                                                        " ",
                                                    )[0]
                                                }</span
                                            >
                                        </h1>
                                        <p
                                            class="text-sm sm:text-base md:text-lg text-cream/90 leading-relaxed max-w-xl"
                                        >
                                            {resume.basics?.summary}
                                        </p>
                                    </div>

                                    <div class="flex flex-wrap gap-3 sm:gap-4">
                                        <ResumeDownload client:load />
                                        <Link client:load href={`mailto:${resume.basics?.email}`} variant="cyber" >
                                            Contact me!
                                        </Link>
                                    </div>
                                    
                                    <div class="pb-2">
                                        <TechStack technologies={techStack} client:load />
                                    </div>

                                    <!-- Social Links-->
                                    {
                                        resumeData.basics.profiles.length >
                                            0 && (
                                            <div class="flex gap-3 sm:gap-4">
                                                {resume.basics?.profiles?.map(
                                                    (profile) => (
                                                        <a
                                                            href={profile.url}
                                                            target="_blank"
                                                            rel="noopener noreferrer"
                                                            class="p-2 sm:p-3 bg-deep-purple/50 rounded-lg sm:rounded-xl text-cream/80 border border-neon-pink/20 hover:border-cyber-blue/50 hover:text-cyber-blue transition-all duration-300 group"
                                                            aria-label={`Visit ${profile.network} profile`}
                                                        >
                                                            <Fragment
                                                                set:html={
                                                                    socialIcons[
                                                                        profile.network as keyof typeof socialIcons
                                                                    ]
                                                                }
                                                            />
                                                        </a>
                                                    ),
                                                )}
                                            </div>
                                        )
                                    }
                                </div>
                                
                                <!--&lt;!&ndash; Right Column: Terminal &ndash;&gt;-->
                                <!--<div class="relative hidden lg:block">-->
                                <!--    <Terminal />-->
                                <!--</div>-->
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
        <Footer />
    </VisibilityWrapper>

    <style>
        .invisible {
            visibility: hidden;
            opacity: 0;
        }

        .visible {
            visibility: visible;
            opacity: 1;
        }

        .transition-all {
            transition:
                visibility 0.5s,
                opacity 0.5s;
        }
    </style>
</Layout>
